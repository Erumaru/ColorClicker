<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="koben.bubbles.GameFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|center_vertical"
        android:background="@drawable/game_fragment_background">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textView"
            android:background="@drawable/green"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="25dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/im_4"
            android:clickable="true"
            android:background="@drawable/state_relax"
            android:layout_alignTop="@+id/im_3"
            android:layout_toRightOf="@+id/im_3"
            android:layout_toEndOf="@+id/im_3" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/im_2"
            android:clickable="true"
            android:background="@drawable/state_relax"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/im_1"
            android:layout_toEndOf="@+id/im_1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/im_1"
            android:clickable="true"
            android:background="@drawable/state_relax"
            android:layout_alignTop="@+id/im_2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="60dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/im_3"
            android:clickable="true"
            android:background="@drawable/state_relax"
            android:layout_alignTop="@+id/im_2"
            android:layout_toRightOf="@+id/im_2"
            android:layout_toEndOf="@+id/im_2" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="3"
            android:id="@+id/textView3"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/button_green"
            android:textSize="90dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>

</FrameLayout>

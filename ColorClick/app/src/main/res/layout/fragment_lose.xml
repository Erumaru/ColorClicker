<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="codebusters.ColorClicker.LoseFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/game_fragment_background">

        <TextView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/loseText"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/button_red"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />


        <Button
            android:id="@+id/tryAgainButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/goMenuButton"
            android:layout_alignStart="@+id/goMenuButton"
            android:layout_below="@+id/loseText"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            android:text="Try Again"
            android:textSize="15sp" />

        <Button
            android:id="@+id/goMenuButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tryAgainButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            android:text="Menu"
            android:textSize="15sp"
            android:onClick="backButton"/>

    </RelativeLayout>
</FrameLayout>
